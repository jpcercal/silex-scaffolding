{
    "name": "cekurte/silex-scaffolding",
    "description": "Silex Scaffolding",
    "type": "package",
    "require": {
        "php": "^5.6",
        "ext-json": "^1.3",
        "silex/silex": "^1.3",
        "doctrine/dbal": "^2.5",
        "monolog/monolog": "^1.16",
        "twig/twig": "^1.20",
        "symfony/twig-bridge": "^2.7",
        "vlucas/phpdotenv": "^2.0",
        "jdesrosiers/silex-cors-provider": "^0.1.4",
        "symfony/console": "^2.7",
        "doctrine/migrations": "^1.0",
        "dflydev/doctrine-orm-service-provider": "~1.0",
        "gedmo/doctrine-extensions": "^2.4",
        "symfony/translation": "^2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "cekurte/tdd": "^1.0"
    },
    "authors": [
        {
            "name": "Jo√£o Paulo Cercal",
            "email": "jpcercal@gmail.com"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/App/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "test/App/"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "post-install-cmd": [
            "./bin/composer/scripts/post-install-cmd"
        ],
        "post-root-package-install": [
            "git init",
            "mkdir -p storage/logs",
            "mkdir -p storage/cache",
            "mkdir -p storage/doctrine/migrations",
            "mkdir -p storage/doctrine/proxies",
            "chmod -Rf 777 storage/",
            "php -r \"copy('.env.example', '.env');\""
        ]
    }
}
