{
    "name": "cekurte/silex-scaffolding",
    "description": "Silex Scaffolding",
    "type": "project",
    "require": {
        "php": "^5.6",
        "silex/silex": "^1.3",
        "symfony/monolog-bridge": "~2.7",
        "symfony/twig-bridge": "^2.7",
        "symfony/translation": "^2.7",
        "symfony/config": "^2.7",
        "symfony/yaml": "^2.7",
        "symfony/console": "^2.7",
        "swiftmailer/swiftmailer": "^5.4",
        "doctrine/dbal": "^2.5",
        "doctrine/migrations": "^1.0",
        "dflydev/doctrine-orm-service-provider": "~1.0",
        "gedmo/doctrine-extensions": "^2.4",
        "vlucas/phpdotenv": "^2.0",
        "jdesrosiers/silex-cors-provider": "^0.1.4",
        "saxulum/saxulum-webprofiler-provider": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "cekurte/tdd": "^1.0",
        "symfony/browser-kit": "^2.7",
        "symfony/css-selector": "^2.7",
        "fabpot/php-cs-fixer": "^1.10"
    },
    "authors": [
        {
            "name": "Jo√£o Paulo Cercal",
            "email": "jpcercal@gmail.com"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/App/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "test/App/"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "post-install-cmd": [
            "sh ./bin/composer/scripts/post-install-cmd"
        ],
        "post-root-package-install": [
            "git init",
            "mkdir -p storage/logs",
            "mkdir -p storage/cache",
            "mkdir -p storage/doctrine/migrations",
            "mkdir -p storage/doctrine/proxies",
            "chmod -Rf 777 storage/",
            "php -r \"copy('.env.example', '.env');\""
        ]
    }
}
